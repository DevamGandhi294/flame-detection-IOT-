// Pin definitions
const int flameSensorPin = 7;  // Flame sensor connected to digital pin 7
const int buzzerPin = 8;       // Buzzer connected to digital pin 8

void setup() {
  pinMode(flameSensorPin, INPUT);  // Set flame sensor as input
  pinMode(buzzerPin, OUTPUT);      // Set buzzer as output
  Serial.begin(9600);              // Initialize serial communication for monitoring
}

void loop() {
  int flameState = digitalRead(flameSensorPin);  // Read the state of the flame sensor
  
  if (flameState == LOW) {  // Flame detected (LOW means detection for most flame sensors)
    digitalWrite(buzzerPin, HIGH);  // Turn on the buzzer
    Serial.println("Flame detected! Buzzer ON.");
  } else {
    digitalWrite(buzzerPin, LOW);   // Turn off the buzzer if no flame is detected
    Serial.println("No flame detected.");
  }
  
  delay(100);  // Small delay to prevent excessive serial output
}
